{
  "rules": {
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "books": {
      ".read": "auth != null",
      ".indexOn": ["userId"],
      "$bookId": {
        ".write": "auth != null && (data.child('userId').val() === auth.uid || !data.exists())"
      }
    },
    "recommendations": {
      ".read": true,
      ".write": false
    },
    "notifications": {
      ".read": "auth != null",
      ".indexOn": ["userId", "bookId"],
      "$notificationId": {
        ".read": "auth != null && data.child('userId').val() === auth.uid",
        ".write": "auth != null && (data.child('userId').val() === auth.uid || !data.exists())"
      }
    }
  }
}

