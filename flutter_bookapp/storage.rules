rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Permitir que usuarios autenticados suban imágenes de perfil
    match /profile_images/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId && request.resource.size < 5 * 1024 * 1024;
    }

    // Permitir que usuarios autenticados suban imágenes de libros
    match /book_images/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.resource.size < 5 * 1024 * 1024;
    }

    // Denegar acceso a cualquier otra ruta por defecto
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
